APP_NAME=Service
APP_KEY=
APP_ENV=local
APP_DEBUG=true
APP_URL=https://api.${BASE_DOMAIN}.test
FRONTEND_URL=https://${BASE_DOMAIN}.test

# Database (MySQL)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=${DB_PREFIX}_db
DB_USERNAME=root
DB_PASSWORD=

# Cache & Queue
CACHE_STORE=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file

# Redis (optional - change CACHE_STORE/QUEUE_CONNECTION to redis if needed)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_PREFIX=${DB_PREFIX}_

# Session
SESSION_DOMAIN=.${BASE_DOMAIN}.test
SESSION_SAME_SITE=none
SESSION_SECURE_COOKIE=true

# Sanctum (CORS)
SANCTUM_STATEFUL_DOMAINS=${BASE_DOMAIN}.test,api.${BASE_DOMAIN}.test

# Mail (Mailpit - local dev)
MAIL_MAILER=smtp
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="no-reply@${BASE_DOMAIN}.test"
MAIL_FROM_NAME="${APP_NAME}"

# Storage (Minio S3 - local dev)
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=${DB_PREFIX}
AWS_ENDPOINT=http://127.0.0.1:9000
AWS_USE_PATH_STYLE_ENDPOINT=true

# SSO Configuration
# Local: use auth-omnify.test with test-service
# Production: set your console URL and register a service
SSO_CONSOLE_URL=https://auth-omnify.test
SSO_SERVICE_SLUG=test-service
SSO_SERVICE_SECRET=local_dev_secret
